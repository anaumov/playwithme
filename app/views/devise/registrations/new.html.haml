%h2 Registration
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs
    .form-group.help-block
      = f.input :login, :required => true, :autofocus => true, placeholder: 'Enter your username', class: 'form-control'
    .form-group.help-block
      = f.input :email, :required => true, placeholder: 'Enter your email', class: 'form-control'
    .form-group.help-block
      = f.input :password, :required => true, placeholder: 'Create a strong password', class: 'form-control'
    .form-group.help-block
      = f.input :password_confirmation, :required => true, placeholder: 'Confirm password', class: 'form-control'
    %p fields marked with * are required
  .form-actions
    = f.button :submit, "Create an account", class: 'btn btn-primary'